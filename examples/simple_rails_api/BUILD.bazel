package(default_visibility = ["//:__subpackages__"])

load(
    "@rules_ruby//ruby:defs.bzl",
    "rb_binary",
    "rb_test",
)

rb_binary(
    name = "server",
    srcs = glob(
        include = [
            "app/**/*",
            "config/**/*",
            "bin/*",
            "config.ru",
        ],
    ),
    force_gem_pristine = [
        "--extensions",
    ],
    main = ":bin/rails",
    deps = [
        "@bundle//:listen",
        "@bundle//:pry-byebug",
        "@bundle//:rails",
    ],
)
